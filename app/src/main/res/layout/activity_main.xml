<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <tarek.android.toumalos.deadhalvr3.Draw.Drawing
        android:id="@+id/drawing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="matrix"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/buttonsPrincipaleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="horizontal"
        android:visibility="visible">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/Drow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_edit_black_24dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/Options"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_settings_applications_black_24dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/Refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_refresh_black_24dp" />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/Save"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_save_black_24dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/Back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_arrow_back_black_24dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="horizontal"
        android:visibility="gone">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_add_box_black_24dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/selected"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_select_app_black_24dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/relation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_shuffle_black_24dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/rotate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_crop_rotate_black_24dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/move"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_open_with_black_24dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/resize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_settings_overscan_black_24dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/remove"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_delete_forever_black_42dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/backToMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_menu_black_24dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/addingLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="horizontal"
        android:visibility="gone">

        <EditText
            android:id="@+id/rectW"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="Width"
            android:inputType="number"
            android:text="300"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/rectH"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="Height"
            android:inputType="number"
            android:text="300"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/rectName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="Name"
            android:inputType="text"
            android:textAlignment="center" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/valideAdd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_add_circle_black_24dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/cancelAdd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_cancel_black_24dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/RayonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:visibility="gone">

        <SeekBar
            android:id="@+id/SeekRayonX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:outlineAmbientShadowColor="#03A9F4"
            android:outlineSpotShadowColor="#03A9F4" />

        <SeekBar
            android:id="@+id/SeekRayonY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:outlineAmbientShadowColor="#03A9F4"
            android:outlineSpotShadowColor="#03A9F4" />


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/cancelRotate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:src="@drawable/ic_menu_black_24dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/NametLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <EditText
            android:id="@+id/changeNameEdit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="monospace"
            android:textSize="22dp"
            android:hint="Nom"
            android:maxLength="10"
            android:textAlignment="center"
            android:textColor="#000000"
            android:layout_weight="1" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/changeName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:src="@drawable/ic_check_circle_black_24dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/InteretLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <EditText
            android:id="@+id/changeInteretEdit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="monospace"
            android:textSize="22dp"
            android:hint="Interet"
            android:maxLength="10"
            android:textAlignment="center"
            android:textColor="#000000"
            android:layout_weight="1" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/changeInteret"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:src="@drawable/ic_check_circle_black_24dp" />
    </LinearLayout>
</LinearLayout>